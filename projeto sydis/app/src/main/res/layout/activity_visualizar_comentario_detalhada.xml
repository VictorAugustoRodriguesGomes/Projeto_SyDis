<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisualizarComentarioDetalhada">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/setComentComentario1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text="Comentário:"
            android:textAllCaps="true"
            android:textColor="@color/corPrincipal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setComentComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text=" "
            android:textColor="@color/corPrincipal"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/setDataComentario1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text="Data do comentário: "
            android:textAllCaps="true"
            android:textColor="@color/corPrincipal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setDataComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text=" "
            android:textColor="@color/corPrincipal"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/setuserComentario1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text="Publicado por:"
            android:textAllCaps="true"
            android:textColor="@color/corPrincipal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setuserComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:gravity="left"
            android:text=" "
            android:textColor="@color/corPrincipal"
            android:textSize="18sp"
            android:textStyle="normal" />


    </LinearLayout>

</ScrollView>
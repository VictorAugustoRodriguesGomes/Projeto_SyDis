<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisualizarOcorrenciaDetalhada">


    <ImageView
        android:id="@+id/downloadIMG"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/setNome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="Nome da Ocorrencia: "
        android:textAllCaps="true"
        android:textColor="@color/corPrincipal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text=" "
        android:textColor="@color/corPrincipal"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/setDescricao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="Descrição da ocorrência: "
        android:textAllCaps="true"
        android:textColor="@color/corPrincipal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text=" "
        android:textColor="@color/corPrincipal"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/setLocal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="local da ocorrência: "
        android:textAllCaps="true"
        android:textColor="@color/corPrincipal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text=" "
        android:textColor="@color/corPrincipal"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/setUser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="Publicado por:"
        android:textAllCaps="true"
        android:textColor="@color/corPrincipal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/setUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text=" "
        android:textColor="@color/corPrincipal"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="comentários da ocorrencia: "
        android:textAllCaps="true"
        android:textColor="@color/corPrincipal"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_icone_add_descricao_custom"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Insira seu comentário:"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text=""
                android:textColor="@color/corSecundaria"
                android:textColorHint="@color/corSecundaria"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BTNComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_button"
                android:text="Enviar"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/listaVComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:fillViewport="true" />

</LinearLayout>